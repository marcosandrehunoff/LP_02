implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}



procedure TDmMovimentacao.CdsVendaAfterDelete(DataSet: TDataSet);
begin
  CdsVenda.ApplyUpdates(0);
end;

procedure TDmMovimentacao.CdsVendaAfterPost(DataSet: TDataSet);
begin
  CdsVenda.ApplyUpdates(0);
end;

end.

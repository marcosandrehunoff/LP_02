    CdsItemVEI_PRO_CODIGO: TIntegerField;
    procedure CdsVendaAfterPost(DataSet: TDataSet);
    procedure CdsVendaAfterDelete(DataSet: TDataSet);

  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
